{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/post/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i)(WhatsApp|facebookexternalhit|Twitterbot|LinkedInBot|Slackbot|Googlebot)"
        }
      ],
      "destination": "/api/post/:slug"
    },
    {
      "source": "/post/:slug",
      "destination": "/index.html"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
